{
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx"],
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "es2015",
    "allowJs": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
